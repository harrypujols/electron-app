{
  "name": "electron-app",
  "version": "1.0.0",
  "description": "A desktop app using Electron",
  "main": "gulpfile.js",
  "scripts": {
    "start": "electron ./app/main.js",
    "build": "electron-packager ./app $npm_package_productName --platform=darwin --arch=x64 --ignore=node_modules --icon=icons/icon --overwrite --out=./release"
  },
  "author": "Harry",
  "license": "GNU",
  "devDependencies": {
    "electron-packager": "^7.0.1",
    "electron-prebuilt": "^0.37.7",
    "gulp": "^3.9.1",
    "gulp-electron": "^0.1.2"
  }
}
